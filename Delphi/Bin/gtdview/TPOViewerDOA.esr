FIZLIC.SQL("SELECT FAMILIA, IMYA, OTCHESTVO, decode(NUM_DOC, null, NUM_DOC, 'НОМЕР ' || NUM_DOC) as NUM_DOC, decode(SER_DOC, null, SER_DOC, 'ПАСПОРТ СЕРИЯ ' || SER_DOC) as SER_DOC, decode(GIVE_DOC, null, GIVE_DOC, 'ВЫДАН ' || GIVE_DOC) as GIVE_DOC, KOGD_DOC, OKPO, INN, ADRES FROM DBF_TPO_CLIENTS WHERE 1=1");
